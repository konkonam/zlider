{
    "compilerOptions": {
        "module": "esnext",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "isolatedModules": true,
        "strict": true,
        "strictNullChecks": true,

        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,

        "declaration": true,
        "declarationMap": true,

        "noEmit": true,
        "incremental": true,

        "target": "esnext",
        "lib": ["esnext", "dom"],
        "jsx": "preserve",
        "types": ["node"]
    },
    "include": [
        "src/*.{ts,vue}",
        "**/*.vue"
    ],

    "exclude": [
        "node_modules"
    ]
}
